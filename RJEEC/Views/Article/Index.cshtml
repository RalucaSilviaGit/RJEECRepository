@model IEnumerable<Article>

@{
    ViewBag.PageTitle = "Article List";
}

<h3>@ViewBag.PageTitle</h3>

<div class="article card-deck">
    @foreach (var article in Model)
    {
        <div class="card m-3">
            <div class="card-header">
                <h3>@article.Title</h3>
            </div>
            <h4>Author: @(article.contactAuthor != null ? (article.contactAuthor.LastName + " " + article.contactAuthor.FirstName) : String.Empty)</h4>
            <div class="card-footer">
                <a asp-controller="Article" asp-action="Details" asp-route-id="@article.Id" class="btn btn-primary m-1">View</a>
                <a asp-controller="Article" asp-action="Edit" asp-route-id="@article.Id" class="btn btn-primary m-1">Review</a>
                <a asp-controller="Article" asp-action="Check" asp-route-id="@article.Id" class="btn btn-primary m-1" style="width:200px">Check Review Status</a>
            </div>
        </div>
    }
</div>

