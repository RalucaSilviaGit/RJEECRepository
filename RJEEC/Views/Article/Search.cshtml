@model SearchViewModel

@{
    ViewBag.PageTitle = "RJEEC - Search Article";
}

<h3>SEARCH within Romanian Journal of Ecology & Environmental Chemistry</h3>
<form asp-controller="article" asp-action="search" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="AuthorName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="AuthorName" class="form-control" placeholder="Author name">
            <span asp-validation-for="AuthorName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Volume" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Volume" class="form-control" placeholder="Volume">
            <span asp-validation-for="Volume" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Year" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Year" class="form-control" placeholder="Year">
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Keywords" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Keywords" class="form-control" placeholder="Keywords">
            <span asp-validation-for="Keywords" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

<div class="card-deck">
    @if (Model.Articles != null && Model.Articles.Count() > 0)
    {
        @foreach (var article in Model.Articles)
        {
            <partial name="_ArticleCard" model="@article" />
        }
    }
</div>
