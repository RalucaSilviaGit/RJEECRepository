@model Article

@{
    ViewBag.PageTitle = "Author Details";

<h3>@ViewBag.PageTitle</h3>

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Title</h1>
                <h2>Author: @Model.contactAuthor.FirstName @Model.contactAuthor.LastName</h2>
            </div>

            <div class="card-body text-center">
                @Model.Description
            </div>
            <div class="card-footer text-center">
                <a asp-controller="article" asp-action="index" class="btn btn-primary">Back</a>
                <a asp-controller="article" asp-action="edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            </div>
        </div>
    </div>
</div>
