@model Article
    <div class="articlecard card m-3">
        <div class="card-header">
            <h3>@Model.Title</h3>
        </div>
        @if (!String.IsNullOrEmpty(Model.Authors))
        {
            <h6 style="margin:1em 2em">Authors: @Model.Authors</h6>
        }
        

    <div class="card-footer">
        <a asp-controller="Article" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary m-1">View</a>
        <a asp-controller="Article" asp-action="Review" asp-route-id="@Model.Id" class="btn btn-primary m-1">Review</a>
        <a asp-controller="Article" asp-action="Read" asp-route-id="@Model.Id" class="btn btn-primary m-1">Read</a>
        <a asp-controller="Article" asp-action="DownloadFile" asp-route-fileName="@Model.Documents.FirstOrDefault(d => d.Type == DocumentType.ArticleContent)?.DocumentPath" asp-route-subfolder="articles" asp-route-title="@Model.Title" class="btn btn-primary" style="width:10em">Download Article</a>
        @if (!String.IsNullOrWhiteSpace(Model.Description))
        {
            <button type="button" class="collapsibleAbs btn btn-primary" style="width:10em">Read Abstract</button>
            <div class="content">
                @Model.Description
            </div>
        }
    </div>
    </div>