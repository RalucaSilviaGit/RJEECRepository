@model EventEditViewModel

@{
    ViewBag.PageTitle = "RJEEC - Edit Event";
}

<h2>Edit event</h2>

<form asp-controller="event" asp-action="edit" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Date" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Date" class="form-control" placeholder="Date">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Location" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Location" class="form-control" placeholder="Location">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Description">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-7">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-controller="Event" asp-action="index" class="btn btn-primary">Back</a>
        </div>
        <div class="col-sm-5">
            <a asp-controller="Event" asp-action="EditEventPhotos" asp-route-id="@Model.Id" class="btn btn-primary" style="width:15em; float:right;">Change Event Photos</a>
        </div>
    </div>
</form>