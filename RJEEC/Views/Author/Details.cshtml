@model Author

@{
    ViewBag.PageTitle = "Author Details";
    var photoPath = "~/authorImages/" + (Model.PhotoPath ?? "noimage.jpg");
}

<h3>@ViewBag.PageTitle</h3>

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.FirstName @Model.LastName</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />

                <h4>Author ID : @Model.Id</h4>
                <h4>Email : @Model.Email</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="author" asp-action="index" class="btn btn-primary">Back</a>
                <a asp-controller="author" asp-action="edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            </div>
        </div>
    </div>
</div>
